<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:titleTextColor="@color/text_on_primary"
            app:navigationIcon="@drawable/ic_back"
            app:title="Campaigns Near You" />

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Map View -->
        <org.osmdroid.views.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- List View Toggle Button -->
        <LinearLayout
            android:id="@+id/btnListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:background="@drawable/bg_rounded_white"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_list"
                app:tint="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="List"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:fontFamily="@font/inter" />

        </LinearLayout>

        <!-- Campaign Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCampaignInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Campaign Name -->
                <TextView
                    android:id="@+id/tvCampaignName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Campaign Name"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter" />

                <!-- Organizer -->
                <TextView
                    android:id="@+id/tvCampaignOrganizer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Organizer"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <!-- Location Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/primary" />

                    <TextView
                        android:id="@+id/tvCampaignLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Location"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Date/Time Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/primary" />

                    <TextView
                        android:id="@+id/tvCampaignDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Date and Time"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Blood Types -->
                <TextView
                    android:id="@+id/tvCampaignBloodTypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Needed: A+, O-"
                    android:textColor="@color/primary"
                    android:textSize="13sp"
                    android:fontFamily="@font/inter" />

                <!-- Book Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBookNow"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:text="Book This Campaign"
                    android:textColor="@color/text_on_primary"
                    android:textAllCaps="false"
                    app:cornerRadius="24dp"
                    app:backgroundTint="@color/primary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
